<div class="content_post">
    <div class='more'>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', "/postings/#{posting.id}", method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == posting.user_id %>
        </li>
          <%= link_to '編集', "/postings/#{posting.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/postings/#{posting.id}", method: :delete %>
        </li>
      <% end %>
    </ul>
    </div>
  <%= simple_format(posting.text) %>
  <span class="name">
    <a href="">
      <span>投稿者</span><%= posting.user.nickname %>
    </a>
  </span>
</div>
